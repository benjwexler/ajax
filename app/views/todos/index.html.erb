<h1>My Todos</h1>

<%= form_for Todo.new do |f| %>
  <div class="form-group">
    <%= f.text_field :description, placeholder:
    "Ticker Symbol" %>
  </div>

  <div class="form-group">
    <%= f.text_field :priority, placeholder: "Quantity" %>
  </div>


  <div class="form-group">
  <input type="submit" name="commit" value="Get Price">
  </div>
<% end %>
<br>
<div>
    <input placeholder="Total Price to Come" type="text" id="totalPrice">
  </div>

<ul>
<%= render @todos %>
</ul>
